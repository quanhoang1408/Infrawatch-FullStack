{
  "info": {
    "_postman_id": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
    "name": "Infrawatch Phase 6 Tests",
    "description": "Test collection for Infrawatch Phase 6 - SSH Key Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"admin_token\", jsonData.tokens.access.token);",
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response has tokens\", function () {",
              "    pm.expect(jsonData.tokens).to.be.an('object');",
              "    pm.expect(jsonData.tokens.access).to.be.an('object');",
              "    pm.expect(jsonData.tokens.access.token).to.be.a('string');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"{{admin_email}}\",\n    \"password\": \"{{admin_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "auth",
            "login"
          ]
        },
        "description": "Login as admin to get access token"
      },
      "response": []
    },
    {
      "name": "Get VMs",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.length > 0) {",
              "    pm.environment.set(\"vm_id\", jsonData[0]._id);",
              "    pm.environment.set(\"agent_token\", jsonData[0].agentToken);",
              "}",
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response is an array\", function () {",
              "    pm.expect(jsonData).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/vm",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "vm"
          ]
        },
        "description": "Get list of VMs to use for testing"
      },
      "response": []
    },
    {
      "name": "Update SSH Key",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"command_id\", jsonData.commandId);",
              "pm.test(\"Status code is 202\", function () {",
              "    pm.response.to.have.status(202);",
              "});",
              "pm.test(\"Response has commandId\", function () {",
              "    pm.expect(jsonData.commandId).to.be.a('string');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"sshUser\": \"testuser\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/vm/{{vm_id}}/ssh-key/update",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "vm",
            "{{vm_id}}",
            "ssh-key",
            "update"
          ]
        },
        "description": "Trigger SSH key update for a VM"
      },
      "response": []
    },
    {
      "name": "Get Commands",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.length > 0 && !pm.environment.get(\"command_id\")) {",
              "    pm.environment.set(\"command_id\", jsonData[0].id);",
              "}",
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response is an array\", function () {",
              "    pm.expect(jsonData).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Agent-Token",
            "value": "{{agent_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/agent/{{vm_id}}/commands",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "agent",
            "{{vm_id}}",
            "commands"
          ]
        },
        "description": "Get pending commands for a VM"
      },
      "response": []
    },
    {
      "name": "Update Command Result",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-Agent-Token",
            "value": "{{agent_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"commandId\": \"{{command_id}}\",\n    \"status\": \"SUCCESS\",\n    \"message\": \"SSH key updated successfully\",\n    \"data\": {\n        \"path\": \"/home/testuser/.ssh/authorized_keys\"\n    }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/agent/{{vm_id}}/command_result",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "agent",
            "{{vm_id}}",
            "command_result"
          ]
        },
        "description": "Update command result"
      },
      "response": []
    }
  ],
